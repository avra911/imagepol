<div class="row">
  <div class="col s12 m4">
  </div>
  <div class="col s12 m8">
    <h2><%= t('.forgot_your_password') %></h2>
  </div>
</div>

<div class="row">
  <div class="col s12 m4">
    <%= undraw("forgot_password", color: "#{@color}", size: "100%") %>
  </div>
  <div class="col s12 m8">
    <%= form_for(resource, as: resource_name, url: password_url(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true %>
      </div>

      <div class="actions">
        <%= f.submit t('.send_me_reset_password_instructions'), class: "btn #{@color}" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>